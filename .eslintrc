{
    "env": {
        "browser": true,
        "node": true
    },
    
    "extends": [
        "eslint:recommended",
        "airbnb"
    ],

    "rules": {
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4]
    },

    "parserOptions": {
        "ecmaVersion": 2022,
        "ecmaFeatures": {
            "jsx": true
        }
    }
}